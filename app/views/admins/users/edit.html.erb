<h2>ユーザ編集</h2>
<%= form_with model:@user, local:true do |f| %>
  <h4>名前</h4>
  <%= f.text_field :name %>
  <h4>メールアドレス</h4>
  <%= f.text_field :email %>
  <h4>ステータス</h4>
  <%= @user.status_i18n %>
  <h4>退会フラグ</h4>
  <%= f.radio_button :is_valid, true %>
  <%= f.label :is_valid, "有効" %>
  <%= f.radio_button :is_valid, false %>
  <%= f.label :is_valid, "退会" %>
  <br>
  <%= f.submit '編集' %>
<% end %>