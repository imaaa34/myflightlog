<div class="container my-4">
  <h2 class="text-center">ユーザ一覧</h2>
  <div class="row admin-search-form">
    <div class="col-lg-10">
      <%= form_with url: admins_search_user_path, method: :get, local: true do |f| %>
        <%= f.text_field :word, placeholder: '名前またはメールアドレス' %>
        <%= f.submit "検索", class: 'btn btn-outline-secondary' %>
      <% end %>
    </div>
  </div>
  <%= render 'index', users: @users %>
  <div class="row justify-content-center mt-5">
    <%= paginate @users %>
  </div>
</div>
