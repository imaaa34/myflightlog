<h2>お問い合わせ画面</h2>
<%= form_with model:@contact, local:true do |f| %>
  <table>
    <tr>
      <th>名前</th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td><%= f.text_area :content %></td>
    </tr>
  </table>
  <%= f.submit '送信' %>
<% end %>