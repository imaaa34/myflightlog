<% if log.favorited_by?(current_user) %>
  <%= link_to log_favorites_path(log), method: :delete, remote: true do %><i class="fas fa-heart fa-lg text-danger"></i><% end %>
<% else %>
  <%= link_to log_favorites_path(log), method: :post, remote: true do %><i class="far fa-heart fa-lg text-danger"></i><% end %>
<% end %>