<div class="container my-5">
  <h2>ログ一覧</h2>
  <div class="search-form my-3">
    <div class="row">
        <%= form_with url: search_log_path, method: :get, local: true do |f| %>
          <%= f.date_field :date_from %> ~ <%= f.date_field :date_to %>
          <%= f.submit "検索", class: 'btn btn-sm btn-outline-secondary' %>
        <% end %>
    </div>
    <div class="row mt-2">
      <%= link_to 'お気に入り一覧', favorite_log_path, class: 'text-dark' %>
    </div>
  </div>
  <%= render 'index', logs: @logs %>
</div>