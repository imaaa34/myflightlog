<div class="container my-4">
  <h3 class="text-center">フライトログ一覧</h3>
    <div class="row date-search">
      <div class="col-lg-10">
      <%= form_with url: search_log_path, method: :get, local: true do |f| %>
        <%= f.date_field :date_from %> ~ <%= f.date_field :date_to %>
        <%= f.submit "検索", class: 'btn btn-sm btn-outline-secondary' %>
      <% end %>
      </div>
    </div>
    <div class="row sort-search mt-2">
      <div class="col-lg-10">
        <%= form_with url: sort_log_path, method: :get, local: true do |f| %>
          <%= f.select :keyword, [['搭乗日が新しい順', 'new'], ['搭乗日が古い順', 'old'], ['投稿が新しい順', 'post_new'], ['投稿が古い順', 'post_old'], ['お気に入り一覧', 'favorites']]%>
          <%= f.submit "並び替え", class: 'btn btn-sm btn-outline-secondary' %>
        <% end %>
      </div>
    </div>
  <%= render 'index', logs: @logs %>
  <div class="row justify-content-center mt-5">
    <%= paginate @logs %>
  </div>
</div>