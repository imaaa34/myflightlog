<div class="container my-5">
  <h2>新規登録 <i class="fas fa-plane fa-xs"></i></h2>

  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :名前 %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :パスワード確認 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions mt-3">
      <%= f.submit "新規登録", class: 'btn btn-outline-secondary' %>
    </div>
  <% end %>
  <p class="mt-3">
    アカウントをお持ちの方は<%= link_to "こちら", new_user_session_path %>からログインしてください。<br>
    <%= link_to 'googleアカウントでログインする', user_google_oauth2_omniauth_authorize_path, method: :post %>
  </p>
</div>
